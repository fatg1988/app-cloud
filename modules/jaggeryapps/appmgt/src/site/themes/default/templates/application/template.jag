                $("#url-upload").attr("disabled", false);
            }
            return true;
        } else {
            $("#url-upload").attr("disabled", true);
            uploadURLErrorMsg = "Invalid URL. The URL should be in the format : http:\/\/host-name\/file-location\/file-name." + APP_TYPE_EXTENSIONS;
